{{>_navbarglobal}}
{{#if error}}
    <div class="ErrorMSG">
        {{error}}
    </div>
{{else}}
{{/if}}
<div class="BolsaBox">valores da bolsa aparecerão aqui.</div>
<section class="BoxLogo">
    <div class="Logo">EcoMercado <br> Global</div>
    <div class="linhaVerticalLogo"></div>
    <div class="LogoMarca">
        “Conectando você ao pulsar do mundo financeiro”
    </div>
</section>
<h2 class="Title">Notícias</h2>
{{#each postagens}}
    <section class="BoxNotícias">
        <div class="ImgPost">img aqui</div>
        <div class="PostInfo">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
        </div>
        <div class="ButtonBox">
            <a href="/postagem/{{slug}}" class="LinkPostagens"><button class="Button-see-more">ver mais</button></a>
        </div>
    </section>
{{else}}
    <h4>nenhuma postagem ainda</h4>
{{/each}}
{{>_footer}}